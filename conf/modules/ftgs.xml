<!DOCTYPE module SYSTEM "module.dtd">

<module name="ftgs">
  <doc>
    <description>
      stabilization module for fixedwing
    </description>

    <section name="Repiove">
      <define name="Aldo" value="1.0" description="unica variabile"/> 
    </section>
  </doc>

  <settings>
    <dl_settings>
      <dl_settings name="PD_down">
       <dl_settings NAME="Unica">
          <dl_setting MAX="50.0" MIN="0.1" STEP="0.1" VAR="k_th" shortname="K_TH"/>  
          <dl_setting MAX="50.0" MIN="0.1" STEP="0.1" VAR="k_vx" shortname="K_VX"/>
          <dl_setting MIN="0" MAX="1" STEP="1" VAR="h_ctl_disabled" values="FALSE|TRUE" module="stabilization/stabilization_attitude">
           <strip_button name="FTGS_ON" value="1" group="ftgs"/>
           <strip_button name="FTGS_OFF" value="0" group="ftgs"/>
          </dl_setting>
       </dl_settings>
      </dl_settings>
    </dl_settings>
  </settings>

  <header>
    <file name="ftgs.h"/>
  </header>

  <init fun="fts_init()"/>

  <makefile firmware="fixedwing">
    <define name="Aldo" value="1.0"/>
    <file name="ftgs.c"/>
  </makefile>

</module>

